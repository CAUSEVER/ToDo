<UserControl x:Name="TheCheckBox" x:Class="DoThingsRight.controls.DesignedCheck.DesignedCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoThingsRight.controls.DesignedCheck"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="Front"
               Stretch="Fill" Panel.ZIndex="1" Opacity="0"/>

        <Image x:Name="BehindUnchecked"
               Stretch="Fill" Opacity="1" Panel.ZIndex="0"/>

        <Image x:Name="BehindChecked"
               Stretch="Fill" Opacity="0" Panel.ZIndex="0"/>
        <!-- 其他控件和布局... -->
    </Grid>
</UserControl>
